<?xml version="1.0" encoding="UTF-8"?>

<!--setting debug here to true, shows internal data of logback.-->
<configuration>
  <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

  <shutdownHook class="ch.qos.logback.core.hook.DelayingShutdownHook"/>
  <property name="LOG_BASE_DIR" value="${logging.baseDir}"/>

  <property name="LOG_LEVEL_PATTERN" value="%5p [ofs,%X{X-B3-TraceId:-},%X{X-B3-SpanId:-},%X{X-Span-Export:-}]"/>


      <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
          <Pattern>
            %clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%ex}
          </Pattern>
        </encoder>
      </appender>

      <root level="warn">
        <appender-ref ref="STDOUT"/>
      </root>




  <!-- Send logs to both console and file audit -->
<!--  <logger name="net.ttddyy.dsproxy.listener.logging.SLF4JQueryLoggingListener" level="debug"/>-->
</configuration>
